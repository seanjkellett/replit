{
  "appId": "com.village.chat",
  "productName": "Village",
  "directories": {
    "output": "dist/electron"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "server/**/*",
    "shared/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "assets/",
      "to": "assets/",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "category": "public.app-category.social-networking",
    "icon": "assets/icon.icns",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      }
    ],
    "icon": "assets/icon.ico"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.png",
    "category": "Network"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "publish": null
}